# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/lyric_video_generator
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lyric_video_generator
DB_USER=postgres
DB_PASSWORD=password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Storage (AWS S3 or Cloudflare R2)
STORAGE_PROVIDER=s3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=lyric-videos
S3_BUCKET_URL=https://your-bucket.s3.amazonaws.com

# Cloudflare R2 (alternative to S3)
# CLOUDFLARE_ACCOUNT_ID=your-account-id
# CLOUDFLARE_ACCESS_KEY_ID=your-r2-access-key
# CLOUDFLARE_SECRET_ACCESS_KEY=your-r2-secret-key
# R2_BUCKET_NAME=lyric-videos

# YouTube API
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:3000/api/youtube/callback

# Lyrics APIs
GENIUS_API_TOKEN=your-genius-api-token
MUSIXMATCH_API_KEY=your-musixmatch-api-key

# Python Sync Service
PYTHON_SERVICE_URL=http://localhost:8000
WHISPER_MODEL=base

# Upload Limits
MAX_AUDIO_SIZE_MB=50
MAX_VIDEO_SIZE_MB=500

# Rendering
RENDER_QUEUE_CONCURRENCY=2
RENDER_TIMEOUT_MINUTES=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (for notifications - optional)
# SENDGRID_API_KEY=your-sendgrid-api-key
# FROM_EMAIL=noreply@lyricvideos.app

# Analytics (optional)
# POSTHOG_API_KEY=your-posthog-key
# SENTRY_DSN=your-sentry-dsn
